{{ define "base" }}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <base href="/">
    <title>{{block "title" .}} {{end}}</title>
    <meta name="viewport" content="width=device-width, initial-scale = 1.0, maximum-scale=1.0, user-scalable=no">
    <script>
        document.write('<link rel="stylesheet" id="theme-style" href="assets/build/' + (localStorage.getItem('currentTheme') || 'light') + '-theme.css">');
    </script>
    <link rel="stylesheet" href="assets/build/app.css">
</head>
<body>
<div class="container">
    {{block "header" .}} {{end}}

    <section id="content">
        {{template "content" .}}
    </section>

    <div class="loading" style="display:none;">
        <div class="spinner">
            <div class="rect1"></div>
            <div class="rect2"></div>
            <div class="rect3"></div>
            <div class="rect4"></div>
            <div class="rect5"></div>
        </div>
    </div>
</div>

<script src="assets/build/app.js"></script>

</body>
</html>

{{ end }}